<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_reward_drawer_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyDonationsActivity">

    <LinearLayout
        android:id="@+id/my_reward_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:orientation="vertical"
        android:weightSum="10"
        android:focusableInTouchMode="true"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:id="@+id/my_reward_toolbar_linear"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:background="@color/main_color">

            <ImageView
                android:id="@+id/my_reward_navigation_btn"
                android:src="@drawable/nav_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/my_reward_title_text"
                android:text="My Reward Points"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:fontFamily="sans-serif"
                android:layout_margin="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/my_reward_list"
            android:scrollbars="vertical"
            android:layout_weight="8.7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/my_reward_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/header_layout">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>