<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_row_reward_image"
        android:src="@drawable/default_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/single_row_reward_name"
        android:text="Item Name"
        android:layout_toEndOf="@+id/single_row_reward_image"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="17sp"
        android:textColor="@color/main_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/single_row_reward_item_quantity_text"
        android:text="Qty:"
        android:layout_toEndOf="@+id/single_row_reward_image"
        android:layout_below="@+id/single_row_reward_name"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/single_row_reward_item_quantity"
        android:text="3"
        android:layout_toEndOf="@+id/single_row_reward_item_quantity_text"
        android:layout_below="@+id/single_row_reward_name"
        android:layout_alignBaseline="@+id/single_row_reward_item_quantity_text"
        android:layout_marginTop="17dp"
        android:layout_marginStart="5dp"
        android:textSize="15sp"
        android:textColor="@color/main_color"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_row_my_reward_points"
        android:text="0"
        android:textColor="#FFD700"
        android:layout_toLeftOf="@+id/single_row_my_reward_points_text"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/single_row_my_reward_points_text"
        android:text="Points"
        android:layout_alignParentEnd="true"
        android:textColor="#FFD700"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:id="@+id/single_row_reward_date"
        android:text="Date"
        android:textColor="@color/main_color"
        android:textSize="15sp"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/single_row_reward_item_quantity"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/single_row_reward_image"/>

</RelativeLayout>